# 字符串的拼接
print "============字符串的拼接============="
a = "hello world !"
print '1'+a
a = "hello %s %s" %(1,2)
print '2'+a
a ="hello %s %s".format(2,2)
print '3'+a
# a = "hello {} {}".format("num1","num2")
# print a #报错 找不到占位符位置
a = "hello {1} {1}".format("num1","num2")
print '4'+a
a = "hello {value1} {value2}".format(value1="num1",value2="num2")
print '5'+a

c = ",".join(["1","2"])
print c
