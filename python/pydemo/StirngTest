print "tup2[1:5]: ", tup2[1:5]
tup1 = (12, 34.56);
tup2 = ('abc', 'xyz');
    # tuple本身是不可变的
# tup1[0] = 100
    # 创建一个新的元组

    # list的值为可变
tup2 = ('abc', 'xyz',[1,2,3]);
list1 =[1,2,3]
list1[0]=2
print "list1: "+str(list1)
tup2_1=(1,2,[3,4])
tup2_1[2][1]=1
print tup2_1

    # 二维元祖
tup2_1=(1,2,(3,4))
print "二维元祖："+str(tup2_1)
print "tup2_1[2][1]:"+str(tup2_1[2][1])

tup3 = tup1 + tup2;
print tup3;
    #以上实例输出结果：
    #(12, 34.56, 'abc', 'xyz')
    #删除元祖
